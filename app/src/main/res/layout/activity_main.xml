<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.MainActivity">


    <Button
        android:id="@+id/camera_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startCameraActivity"
        android:text="Camera2"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/camera_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startCameraActivity"
        android:text="Triangle"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/camera_btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startCameraActivity"
        android:text="GLSurfaceView + Camera"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/camera_btn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startCameraActivity"
        android:text="SurfaceView + Camera2"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/camera_btn5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startCameraActivity"
        android:text="new EGLsurface Camera"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/camera_btn6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startCameraActivity"
        android:text="native Camera"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/camera_btn7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startCameraActivity"
        android:text="hard decode"
        android:textAllCaps="false" />

</LinearLayout>